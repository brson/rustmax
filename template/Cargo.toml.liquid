[workspace.package]
description = "todo"
version = "0.1.0"
license = "Apache-2.0 OR MIT"
authors = ["Brian Anderson <andersrb@gmail.com>"]
documentation = "todo"
edition = "2024"

[workspace]
resolver = "2"

members = [
  "crates/*",
]

default-members = [
  "crates/{{project-name}}-cli",
]

[workspace.dependencies]
rmx.path = "../rustmax/crates/rustmax"
rmx.package = "rustmax"
rmx.version = "0.0.4"
rmx.features = [
  "rmx-profile-max",
]

[profile.release]
overflow-checks = true
